{
  "variables": {
    "aws_region": "us-east-1",
    "ami_name": "ado-chat-agent-ami-{{timestamp}}",
    "instance_type": "t3.medium",
    "subnet_id": "subnet-074002489fcb3cf3b",
    "profile": "rchsandbox"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{user `aws_region`}}",
      "profile": "{{user `profile`}}",
      "source_ami": "ami-03c4f11b50838ab5d",
      "instance_type": "{{user `instance_type`}}",
      "ssh_username": "ec2-user",
      "ssh_keypair_name": "strinh",
      "ssh_agent_auth": true,
      "subnet_id": "{{user `subnet_id`}}",
      "associate_public_ip_address": true,
      "ami_name": "{{user `ami_name`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo yum update -y",
        "sudo yum install -y git wget unzip gcc make nginx",
        "sudo dnf install -y python3.11 python3.11-pip",
        "sudo ln -sf /usr/bin/python3.11 /usr/local/bin/python3",
        "sudo ln -sf /usr/bin/pip3.11 /usr/local/bin/pip3",
        "python3 --version",
        "curl \"https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip\" -o \"awscliv2.zip\"",
        "unzip awscliv2.zip",
        "sudo ./aws/install",
        "curl -fsSL https://rpm.nodesource.com/setup_20.x | sudo bash -",
        "sudo yum install -y nodejs",
        "python3 -m ensurepip --upgrade",
        "pip3 install --retries 3 --timeout 15 fastapi uvicorn requests pydantic chromadb huggingface_hub",
        "pip3 install --retries 3 --timeout 30 torch --index-url https://download.pytorch.org/whl/cpu",
        "pip3 install --retries 3 --timeout 30 sentence-transformers"
      ]
    }
  ]
}
